@model APPBASE.Models.PATransaction_DetailVM
@using APPBASE.Helpers

@{
    ViewBag.Title = "Informasi Form Penilaian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section includeBOTTOM {
    @Scripts.Render("~/bundles/JSInputMask")
}



<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title"></h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        @{Html.RenderPartial("_Inputs");}
    </div><!-- /.box-body -->
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-12">
                @if (Model.FINAL_SR_RUID != null) {
                    <a href="@Url.Action("Printpreview", new { id = Model.RUID })" class="btn btn-flat btn-sm btn-warning" style="color:White;"><i class="fa fa-edit "></i> Hasil Penilaian</a>
                }

                <a href="@Url.Action("EditCPY", new { id = Model.RUID })" class="btn btn-flat btn-sm btn-warning" style="color:White;"><i class="fa fa-edit "></i> Penilaian Kompetensi</a>
                
                @if (Model.KPI != null) {
                    if (Model.KPI.Count > 0) {
                        <a href="@Url.Action("EditKPI", new { id = Model.RUID })" class="btn btn-flat btn-sm btn-warning" style="color:White;"><i class="fa fa-edit "></i> Penilaian KPI</a>
                    }
                }
                
                <a href="@Url.Action("Calculate", new { id = Model.RUID })" class="btn btn-flat btn-sm btn-warning" style="color:White;"><i class="fa fa-edit "></i> Proses Perhitungan</a>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div><!-- /.row -->
    </div><!-- /.box-footer -->
</div><!-- /.box -->

@section scripts {

<!-- Modal -->
@{Html.RenderPartial("_Events");}

}

