@model IEnumerable<APPBASE.Models.Project_ListVM>

@{
    ViewBag.Title = "Project Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-hover">
    <thead>
        <tr>
            <th>Bisnis Unit</th>
            <th>Nama Project</th>
            <th>
                <a href="@Url.Action("Create")" class="btn btn-primary center-block"><i class="fa fa-file"></i> Tambah Data Project</a>
            </th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.BIZUNIT_NM)</td>
            <td>@Html.DisplayFor(modelItem => item.PROD_NM)</td>
            <td>
                <div class="btn-group dropup">
                  <button type="button" class="btn btn-default">Action</button>
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <!-- Dropdown menu links -->
                    <li>@Html.ActionLink("Edit", "Edit", new { id=item.RUID })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id=item.RUID })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id=item.RUID })</li>
                  </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
    $(document).ready(function () {
    });  //End $(document).ready
</script>
}
