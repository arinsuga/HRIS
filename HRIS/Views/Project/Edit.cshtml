@model APPBASE.Models.Project_DetailVM

@{
    ViewBag.Title = "Perubahan Data Proyek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(true);
    Html.RenderPartial("_Inputs");
    @Html.HiddenFor(model => model.RUID);
    
    <div>
        <button type="submit" class="btn btn-default">Simpan Perubahan Data</button>
        @Html.ActionLink("Kembali", "Index")
    </div>

}

<div id="DialogLookup"><div id="DialogLookupContent"></div></div>

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
    

<script type="text/javascript">
    $(document).ready(function () {
        /*=========================================
        INITIALIZE
        =========================================*/
        //Dialog Lookup
        initDlgLookUp('#DialogLookup');
        /*=========================================
        EVENTS
        =========================================*/
        //Command LookUp [Bizunit=SEARCHVALUE]
        $("#cmdLookupBIZUNIT").click(function () {
            var vaSearchValue = new Array();
            vaSearchValue[0] = "";
            //            vaSearchValue[1] = "Data array 2";
            //            vaSearchValue[2] = "Data array 3";
            var vaTargetTag = new Array();
            vaTargetTag[0] = 'BIZUNIT_RUID'; //RUID
            vaTargetTag[1] = '';   //ID
            vaTargetTag[2] = 'BIZUNIT_NM'; //NM
            showLookup('Lookup/ShowBizunit', '', vaSearchValue, vaTargetTag);
        }); //End  $("#btnLookup").click
        //Command LookUp [Department=SEARCHVALUE]
        $("#cmdLookupDEPT").click(function () {
            var vaSearchValue = new Array();
            vaSearchValue[0] = $("#BIZUNIT_RUID").val();
            //            vaSearchValue[1] = "Data array 2";
            //            vaSearchValue[2] = "Data array 3";
            var vaTargetTag = new Array();
            vaTargetTag[0] = 'DEPT_RUID'; //RUID
            vaTargetTag[1] = '';   //ID
            vaTargetTag[2] = 'DEPT_NM'; //NM
            showLookup('Lookup/ShowBizunitdept', '', vaSearchValue, vaTargetTag);
        }); //End  $("#btnLookup").click
    }); //End $(document).ready
</script>
}
