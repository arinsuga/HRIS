@model APPBASE.Models.PAEvaluator_DetailVM
@using APPBASE.Helpers

@{Boolean isReadytosave = false;}
@{string vsCommandCRUD = "Lanjutkan";}
@if (Model != null) { isReadytosave = true; vsCommandCRUD = "Simpan Data"; }

@{
    ViewBag.Title = "Rubah Pengaturan Otorisasi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section includeBOTTOM {
    @Scripts.Render("~/bundles/JSInputMask")
}

@using (Html.BeginForm())
{

@Html.HiddenFor(model => model.RUID)
<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title"></h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <!-- Left col -->
        <section class="col-lg-7 connectedSortable">
            @{Html.RenderPartial("_Inputs_pre");}
            @if (isReadytosave) { Html.RenderPartial("_Inputs"); }
        </section><!-- /.col-lg-7 connectedSortable -->
    
        <!-- right col (We are only adding the ID to make the widgets sortable)-->
        <section class="col-lg-5 connectedSortable">
            @if (isReadytosave) { Html.RenderPartial("_Inputs_auth"); }
        </section><!-- /.col-lg-5 connectedSortable -->
    </div><!-- /.box-body -->
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary btn-flat">@vsCommandCRUD</button>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div><!-- /.row -->
    </div><!-- /.box-footer -->
</div><!-- /.box -->

}

<!-- Modal -->
@{Html.RenderPartial("_PartialDialogLookup");}


@section scripts {

<!-- Modal -->
@{Html.RenderPartial("_Events");}

}

